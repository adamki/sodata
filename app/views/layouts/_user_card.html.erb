<div class="ui segment red" id="dashboard-card">
  <h2 class="ui center floated header blue">
    <%= current_user.first_name %> <%= current_user.last_name%>'s Profile
  </h2>

  </br>
  <h4 class="ui horizontal divider header">
    <i class="user icon"></i>
    Account Details
  </h4>

  <div class="ui divided items"> </br>
    <div class="image left floated right aligned">
      <a href="#" class="ui tiny image circular">
        <img src="<%= image_url current_user.raw_image %>" class="ui tiny image">
      </a>

      <div class="ui list right floated left aligned">
        <div class="item">
          <i class="users icon"></i>
          <div class="content">
            Sodata App
          </div>
        </div>
        <div class="item">
          <i class="marker icon"></i>
          <div class="content">
            Seattle, WA
          </div>
        </div>
        <div class="item">
          <i class="mail icon"></i>
          <div class="content">
            <a href="<%= current_user.email%>"><%= current_user.email %></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  </br>

  <%= form_tag user_path(current_user), method: :put, :class => "user ui form" do %>
    <div class="field">
      <label>First Name</label>
      <%= text_field_tag "first-name", nil, placeholder: current_user.first_name  %>
    </div>

    <div class="field">
      <label>Last Name</label>
      <%= text_field_tag "last-name", nil, placeholder: current_user.last_name  %>
    </div>

    <div class="field">
      <label>Phone Number</label>
      <%= text_field_tag "phone", nil, placeholder: current_user.phone_number  %>
    </div>

    <div class="field">
      <label>Gender</label>
      <%= text_field_tag "gender", nil, placeholder: current_user.gender  %>
    </div>

    <div class="field">
      <label>Email</label>
      <%= text_field_tag "email", nil, placeholder: current_user.email  %>
    </div>

    <div class="ui toggle checkbox">
      <%= check_box_tag 'accept' %>
      <label>Get Notifications for Missing Bikes?</label>
    </div>

    </br>
    </br>

    <%= submit_tag "Everything Look OK?", class: "ui positive button" do %>
      <i class="checkmark icon"></i>
    <% end %>
  <% end %>

</div>
